{
  "name": "spectatore-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.json && node scripts/copyAssets.mjs",
    "clear:data": "tsx src/tools/clearData.ts",
    "db:check": "tsx src/tools/dbCheck.ts",
    "db:init": "tsx src/tools/dbInit.ts",
    "seed:data": "tsx src/tools/seedDataCli.ts",
    "db:up": "docker compose -f ../docker-compose.yml up -d",
    "db:down": "docker compose -f ../docker-compose.yml down",
    "db:logs": "docker compose -f ../docker-compose.yml logs -f postgres"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.13",
    "pg": "^8.13.1",
    "stripe": "^14.0.0",
    "twilio": "^5.12.0",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
